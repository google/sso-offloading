{
    "compilerOptions": {
        /* Base Settings for all projects */
        "target": "ESNext", 
        "lib": ["ESNext", "DOM"],        
        "useDefineForClassFields": true,
        "module": "ESNext",

        "skipLibCheck": true,
        "isolatedModules": true,
        /* Module Resolution */
        "moduleResolution": "bundler",
        /* Strictness & Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true
    }
}